
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/StockSearch.js"></script>

<table class="table table-bordered">
    <tr>
        <th>Item Code</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Mass</th>
        <th>Location</th>
        <th>VAT(%)</th>
        <th>Retail(incl) Price</th>
        <th>Discount(%)</th>
        <th>Amount</th>
    </tr>
    @for (int i = 0; i < 1000; i++)
    {
        <tr>
            <td><input type="text" id="ItemCode" value="" onchange="funInvoiceStock()" /></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    }
</table>

 <script>
     function funInvoiceStock() {
         var ItemCode = $('#ItemCode').val();
         window.location.replace("http://localhost:25090/home/StockView?ItemCode=" + ItemCode);
     }
 </script>